{
	"version": "2.0.0",
	"tasks": [
		{
			/* Remove the intermediates directory obj/ and the output directory bin/. */
			"type": "shell",
			"label": "clean",
			"options": { "cwd": "${workspaceFolder}/build" },
			"presentation": { "clear": true, "reveal": "silent" },

			"command": "make",
			"args": ["clean"],

			"windows": { "command": "nmake" }
		},
		{
			/* Build the project in debug mode. */
			"type": "shell",
			"label": "build-debug-x64",
			"options": { "cwd": "${workspaceFolder}/build" },
			"presentation": { "clear": true },

			/* Default build task. */
			"group": { "kind": "build", "isDefault": true },

			"command": "make -j8",
			"problemMatcher": ["$gcc"],

			"windows": { "command": "nmake", "problemMatcher": ["$msCompile"] }
		},
		{
			/* Build the project in release mode. */
			"type": "shell",
			"label": "build-release-x64",
			"options": { "cwd": "${workspaceFolder}/build" },
			"presentation": { "clear": true },
			"group": "build",

			"command": "make -j8",
			"args": ["BUILD=1"],
			"problemMatcher": ["$gcc"],

			"windows": { "command": "nmake", "problemMatcher": ["$msCompile"] }
		},
		{
			/* Build the open essay HTML from VSCode Markdown HTML to essay HTML. */
			"type": "shell",
			"label": "essay",
			"options": { "cwd": "${workspaceFolder}/build" },
			"presentation": {
				"clear": true,
				"reveal": "silent"
			},
			"group": "build",

			"command": "make",
			"args": ["essay"],

			"windows": { "command": "nmake" }
		}
	]
}
