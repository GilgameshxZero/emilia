{
	"version": "2.0.0",
	"tasks": [
		{
			/* Remove the intermediates directory obj/ and the output directory bin/. */
			"type": "shell",
			"label": "clean",
			"options": { "cwd": "${workspaceFolder}/build" },
			"presentation": {
				"clear": true
			},

			"command": "make",
			"args": ["clean"],

			"windows": {
				"command": "RMDIR",
				"args": ["/Q", "/S", "..\\bin", "..\\obj"]
			}
		},
		{
			/* Build the open file (must be within test/) in debug mode. */
			"type": "shell",
			"label": "build-debug-x64",
			"options": { "cwd": "${workspaceFolder}/build" },
			"presentation": {
				"clear": true
			},

			/* Default build task. */
			"group": { "kind": "build", "isDefault": true },

			"command": "make",
			"args": ["-j8", "build"],
			"problemMatcher": ["$gcc"],

			"windows": {
				"command": "build",
				"args": [],
				"problemMatcher": ["$msCompile"]
			}
		},
		{
			/* Build the open file (must be within test/) in release mode. */
			"type": "shell",
			"label": "build-release-x64",
			"options": { "cwd": "${workspaceFolder}/build" },
			"presentation": {
				"clear": true
			},
			"group": "build",

			"command": "make",
			"args": ["-j8", "build", "RELEASE=1"],
			"problemMatcher": ["$gcc"],

			"windows": {
				"command": "build",
				"args": ["release"],
				"problemMatcher": ["$msCompile"]
			}
		}
	]
}
